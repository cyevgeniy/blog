---
layout: "layouts/base-centered.njk"
numberOfLatestpoststoshow: 1
eleventyNavigation:
  key: Blog
  order: 2
---

{% for post in collections.posts | reverse | head(meta.postsCount) %}
  <p>
    <a class="postlist__item" href="{{post.url}}">{{ post.data.title }}</a>
    {% if (meta.showPostDate) and (post.data.date) %}, <span class="postlist__date"> {{ post.data.date.toLocaleDateString()}} </span> {% endif %}
  </p>
{% endfor %}

{% if collections.posts.length > meta.postsCount %}
  <p>
    <a class="button button--pink" href="/blog/all"> More articles...</a>
  </p>
{% endif %}

